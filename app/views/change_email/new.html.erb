<div class="prepend-3 span-16 append-3 last">
<%= title t("change_email.new.page_title"), :h2 %>
<hr class="plain"/>
<p><%= t("change_email.new.page_description") %></p>
<hr class="plain"/>
<% form_tag('/change_email/create', :method => :post) do %>
  <div class="span-3 prepend-1">
  <%= UserEmail.human_attribute_name("new_email") %>
  </div>
  <div class="span-11 last">
  <%= text_field_tag "new_email", '', :size => 30 %>
  </div>
  <div class="prepend-4 span-11 last">
  <%= submit_tag t("change_email.new.submit_button") %>
  </div>
<% end %>
<hr class="plain"/>
</div>
